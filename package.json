{
	"name": "portfolio",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"prepare": "pnpm exec panda codegen && pnpm exec husky",
		"dev": "pnpm run dev:servers",
		"dev:frontend": "vite",
		"start": "pnpm exec wrangler dev --remote",
		"dev:servers": "bash -lc 'pnpm run dev:frontend & pnpm run start & wait'",
		"prestart": "pnpm run generate:articles",
		"generate:articles": "pnpm exec tsx worker/lib/generate-blog.ts",
		"prebuild": "pnpm run generate:articles",
		"build": "tsc -b && vite build",
		"lint": "biome lint .",
		"preview": "pnpm run build && vite preview",
		"predeploy": "pnpm run generate:articles",
		"deploy": "pnpm run build && wrangler deploy",
		"cf-typegen": "wrangler types",
		"check": "biome check --write"
	},
	"dependencies": {
		"chart.js": "^4.5.0",
		"highlight.js": "^11.11.1",
		"hono": "^4.9.7",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-icons": "^5.5.0",
		"react-router": "^7.9.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@cloudflare/vite-plugin": "^1.13.1",
		"@pandacss/dev": "^1.3.0",
		"@types/jsdom": "^27.0.0",
		"@types/markdown-it": "^14.1.2",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react-swc": "^4.0.0",
		"dompurify": "^3.1.7",
		"fast-glob": "^3.3.3",
		"gray-matter": "^4.0.3",
		"husky": "^9.1.7",
		"jsdom": "^25.0.0",
		"markdown-it": "^14.1.0",
		"tsx": "^4.20.6",
		"typescript": "~5.8.3",
		"vite": "^7.1.2",
		"wrangler": "^4.37.0"
	}
}
